<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/task_item_container_padding">

    <View
        android:id="@+id/task_item_priority_indicator"
        android:layout_width="@dimen/task_list_item_priority_strip_width"
        android:layout_height="@dimen/task_list_item_priority_strip_width"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/task_item_priority_indicator_padding"
        android:background="@drawable/task_item_priority_indicator" />

    <TextView
        android:id="@+id/task_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/task_item_container_padding"
        android:layout_toStartOf="@id/task_item_priority_indicator"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/task_list_item_horizontal_padding"
        android:paddingRight="@dimen/task_list_item_horizontal_padding"
        android:paddingTop="@dimen/task_list_item_vertical_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        tools:text="Task Title" />

    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_item_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/task_item_container_padding"
        android:layout_toStartOf="@id/task_item_priority_indicator"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/task_list_item_vertical_padding"
        android:paddingLeft="@dimen/task_list_item_horizontal_padding"
        android:paddingRight="@dimen/task_list_item_horizontal_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        tools:text="27 March" />

</RelativeLayout>
